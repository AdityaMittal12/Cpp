//Given an array of integers , change the value of all odd indexed elements to its second multiple and increament all even indexed value by 10

#include <iostream>
using namespace std;
int main() {
    int arr[] = {1,2,3,4,5};     //declare and initialize array
    int n = sizeof(arr)/4;
    
    for (int i=0; i<n; i++){      //updating array  acc. to ques
        if (i%2==0) arr[i]=arr[i]+10;
        else arr[i]= arr[i]*2;
    }
    
    for(int i=0; i<n; i++){      //printing array
        cout<<arr[i]<<" ";
    }
}
