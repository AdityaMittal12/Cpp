//WAP to calculate the product of all the elements in the given array
//1,2,3,4.

#include <iostream>
using namespace std;
int main() {
    int arr[] = {1,2,3,4};
    int n = sizeof(arr)/4;
    int sum=0;
    for(int i=0;i<n;i++){
        sum=sum+arr[i];
    }
    cout<<sum;
}




//WAP to calculate the product of all the elements in the given array
//1,2,3,4.

#include <iostream>
using namespace std;
int main() {
    int arr[] = {1,2,3,4};
    int n = sizeof(arr)/4;
    int product=1;
    for(int i=0;i<n;i++){
        product=product*arr[i];
    }
    cout<<product;
}
