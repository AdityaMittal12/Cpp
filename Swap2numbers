// Swap the values stored in two different variables.


//Method 1: using a 3rd variable.

#include <iostream>
using namespace std;
int main() {
        int x,y;
        cout<<"Enter x : ";
        cin>>x;
        cout<<"Enter y : ";
        cin>>y;
        cout<<x<<" "<<y<<endl;
        int temp = x;
        x=y;
        y=temp;
        cout<<x<<" "<<y;
}



//Method2 :Without using extra variable

#include <iostream>
using namespace std;
int main() {
        int x,y;
        cout<<"Enter x : ";
        cin>>x;
        cout<<"Enter y : ";
        cin>>y;
        cout<<x<<" "<<y<<endl;
        x = x+y;
        y = x-y;
        x = x-y;
        cout<<x<<" "<<y<<endl;
}




//Method3 : //Swap two numbers using functions  (use of reference variables);

#include<iostream>
using namespace std;
void swap(int &x,int &y){
    x=x+y;
    y=x-y;
    x=x-y;
}
int main(){
    int x,y;
    cout<<"Enter x : ";
    cin>>x;
    cout<<"Enter y : ";
    cin>>y;
    cout<<x<<" "<<y<<endl;
    swap(x,y);
    cout<<x<<" "<<y;
}
