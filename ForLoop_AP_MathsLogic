//Ques : Display the given arithmatic progression series upto 'n' terms
//Given AP series: 4,7,10,13,..........

// HINT : last( Nth term )of AP : a + (n-1)d  ; a is 1st term ;n is total no. of terms ; d is diff. b/w two terms.

#include <iostream>
using namespace std;
int main() {
    // Write C++ code here
    int n;
    cout<<"Enter n : ";
    cin>>n;
    for(int i=4;i<=(3*n+1);i=i+3){                                   
        cout<<i<<" ";
    }
    return 0;
}
