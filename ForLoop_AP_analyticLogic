//Ques : Display the given arithmatic progression series upto 'n' terms
//Given AP series: 4,7,10,13,..........

// HINT : only run the loop upto total terms in AP and inside it start increament the AP

#include<iostream>
using namespace std;
int main(){
    int n;
    cout<<"Enter n : ";
    cin>>n;
    int a=4;
    for(int i=1;i<=n;i++){
        cout<<a <<" ";
        a=a+3;
    }
}
